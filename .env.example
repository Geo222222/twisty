# TwistyVoice Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=TwistyVoice
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./twistyvoice.db
# For PostgreSQL: postgresql://user:password@localhost/twistyvoice

# Square API Configuration
SQUARE_APPLICATION_ID=your_square_app_id_here
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_ENVIRONMENT=sandbox  # or 'production'
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# Voice & TTS Configuration
TTS_PROVIDER=elevenlabs  # options: elevenlabs, google, openai
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_preferred_voice_id
OPENAI_API_KEY=your_openai_api_key  # if using OpenAI TTS

# Email Configuration (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
MANAGER_EMAIL=manager@gettwistedhair.com

# Business Configuration
SALON_NAME=GetTwisted Hair Studios
SALON_PHONE=+1234567890
SALON_ADDRESS=123 Main St, City, State 12345
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
TIMEZONE=America/New_York

# Call Campaign Settings
MAX_CALLS_PER_DAY=50
CALL_RETRY_ATTEMPTS=2
CALL_RETRY_DELAY_HOURS=4
RESPECT_DND_HOURS=true
DND_START_HOUR=20  # 8 PM
DND_END_HOUR=9     # 9 AM

# Security Settings
SECRET_KEY=your_secret_key_for_jwt_tokens
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your_32_character_encryption_key

# Compliance Settings
TCPA_COMPLIANCE=true
AUTO_OPT_OUT_KEYWORDS=STOP,UNSUBSCRIBE,REMOVE,QUIT
DATA_RETENTION_DAYS=365

# Optional: Web Dashboard
DASHBOARD_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=secure_password_here

# Optional: External Integrations
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json

# Development Settings
MOCK_CALLS=true  # Set to false in production
MOCK_SMS=true    # Set to false in production
